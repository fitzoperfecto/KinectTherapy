<?xml version="1.0" encoding="utf-8" ?>
<Workout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Exercises>
    <Exercise Id="EXERAE" Name="Right Arm Extension" Repetitions="3">
      <StartingCriteria>
        <Criterion xsi:type="AngleCriterion" Variance="10" Angle="90">
          <Vertex>
            <Name>ElbowRight</Name>
          </Vertex>
          <AdjacentJoints>
            <Joint>
              <Name>ShoulderRight</Name>
            </Joint>
            <Joint>
              <Name>WristRight</Name>
            </Joint>
          </AdjacentJoints>
        </Criterion>
        <Criterion xsi:type="AlignmentCriterion" Variance=".1" Alignment="Horizontal">
          <Joints>
            <Joint>
              <Name>ShoulderRight</Name>
            </Joint>
            <Joint>
              <Name>ElbowRight</Name>
            </Joint>
          </Joints>
        </Criterion>
      </StartingCriteria>
      <TrackingCriteria>
        <Criterion xsi:type="AlignmentCriterion" Variance=".1" Alignment="Horizontal">
          <Joints>
            <Joint>
              <Name>HipRight</Name>
            </Joint>
            <Joint>
              <Name>HipLeft</Name>
            </Joint>
          </Joints>
        </Criterion>
      </TrackingCriteria>
      <Checkpoints>
        <Checkpoint>
          <Criteria>
            <Criterion xsi:type="AngleCriterion" Variance="10" Angle="180">
              <Vertex>
                <Name>ElbowRight</Name>
              </Vertex>
              <AdjacentJoints>
                <Joint>
                  <Name>ShoulderRight</Name>
                </Joint>
                <Joint>
                  <Name>WristRight</Name>
                </Joint>
              </AdjacentJoints>
            </Criterion>
            <Criterion xsi:type="AlignmentCriterion" Variance=".1" Alignment="Horizontal">
              <Joints>
                <Joint>
                  <Name>ShoulderRight</Name>
                </Joint>
                <Joint>
                  <Name>ElbowRight</Name>
                </Joint>
              </Joints>
            </Criterion>
          </Criteria>
        </Checkpoint>
        <Checkpoint>
          <Criteria>
            <Criterion xsi:type="AngleCriterion" Variance="10" Angle="90">
              <Vertex>
                <Name>ElbowRight</Name>
              </Vertex>
              <AdjacentJoints>
                <Joint>
                  <Name>ShoulderRight</Name>
                </Joint>
                <Joint>
                  <Name>WristRight</Name>
                </Joint>
              </AdjacentJoints>
            </Criterion>
            <Criterion xsi:type="AlignmentCriterion" Variance=".1" Alignment="Horizontal">
              <Joints>
                <Joint>
                  <Name>ShoulderRight</Name>
                </Joint>
                <Joint>
                  <Name>ElbowRight</Name>
                </Joint>
              </Joints>
            </Criterion>
          </Criteria>
        </Checkpoint>
      </Checkpoints>
    </Exercise>
  </Exercises>
</Workout>
